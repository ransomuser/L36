        input, button { padding: 10px; margin-top: 10px; }
        #output { margin-top: 20px; }
    </style>
</head>
<body>
    <h1>L36</h1>
    <input type="text" id="inputText" placeholder="Place text here" />
    <button onclick="encryptText()">ENCRYPT</button>
    <button onclick="decryptText()">DECRYPT</button>
    <div id="output"></div>

    <script>
        function encryptText() {
            const input = document.getElementById('inputText').value;
            const mapping = {
                'A': 'Î”', 'B': '3', 'C': '[', 'D': ']', 'E': 'â‰¡', 
                'F': 'â‚¤', 'G': 'LÂ¬', 'H': 'â€¡', 'I': ':', 'J': '_/', 
                'K': '{', 'L': '7', 'M': 'W', 'N': 'u', 'O': ';', 
                'P': 'd', 'Q': 'p', 'R': 'ð…œ', 'S': '5', 'T': 'â”¤', 
                'U': 'n', 'V': '>', 'W': 'M', 'X': '][', 'Y': 'âœ“', 
                'Z': 'N', 'a': 'Î”', 'b': '3', 'c': '[', 'd': ']', 
                'e': 'â‰¡', 'f': 'â‚¤', 'g': 'LÂ¬', 'h': 'â€¡', 'i': ':', 
                'j': '_/', 'k': '{', 'l': '7', 'm': 'W', 'n': 'u', 
                'o': ';', 'p': 'd', 'q': 'p', 'r': 'ð…œ', 's': '5', 
                't': 'â”¤', 'u': 'n', 'v': '>', 'w': 'M', 'x': '][', 
                'y': 'âœ“', 'z': 'N', '0': '.', '1': 'r', '2': '5', 
                '3': 'E', '4': 'Âµ', '5': 'áºž', '6': '9', '7': 'Â¬', 
                '8': 'â˜’', '9': 'g',
            };

            let transformed = '';
            for (const char of input) {
                transformed += mapping[char] || char; // Use the mapping or keep the character as is  
            }

            document.getElementById('output').innerText = transformed;
        }

        function decryptText() {
            const input = document.getElementById('inputText').value;
            const mapping = {
                'Î”': 'A', '3': 'B', '[': 'C', ']': 'D', 'â‰¡': 'E', 
                'â‚¤': 'F', 'LÂ¬': 'G', 'â€¡': 'H', ':': 'I', '_/': 'J', 
                '{': 'K', '7': 'L', 'W': 'M', 'u': 'N', ';': 'O', 
                'd': 'P', 'p': 'Q', 'ð…œ': 'R', '5': 'S', 'â”¤': 'T', 
                'n': 'U', '>': 'V', 'M': 'W', '][': 'X', 'âœ“': 'Y', 
                'N': 'Z', '.': '0', 'r': '1', '5': '2', 'E': '3', 
                'Âµ': '4', 'áºž': '5', '9': '6', 'Â¬': '7', 'â˜’': '8', 
                'g': '9',
            };

            let transformed = '';
            for (const char of input) {
                transformed += mapping[char] || char; // Use the mapping or keep the character as is  
            }

            document.getElementById('output').innerText = transformed;
        }
    </script>

    <p>
        How does the encryption work...?
        <br><br>
        The letters A-Z, a-z, and 0-9 will be shifted into different characters and symbols to make a thing I call L36. It's basically 1337 but with some different characters shifted and number support.
    </p>
